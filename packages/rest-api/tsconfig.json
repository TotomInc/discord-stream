{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["node"],
    "lib": ["esnext"],
  },
  "include": ["config/**/*.ts", "server/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules"]
}
